<?xml version="1.0" encoding="utf-8" standalone="no"?>
<qnx xmlns="http://www.qnx.com/schemas/application/1.0">
    <id>com.example.ModPlayer</id>
    <name>ModPlayer</name>
    <versionNumber>1.0.0</versionNumber>
    <buildId>1</buildId>
    <!--<versionLabel>1.0</versionLabel>-->
    <description>ModPlayer is a tracker music player</description>
    <!--<copyright>Â© 2013 Oleg Kosenkov</copyright>-->

    <author>Oleg Kosenkov</author>
    <authorId>gYAAgNvOOqSvefTEeSiCjimMZSs</authorId>
    <category>core.media</category>
    <splashScreens>
       <image>landscape-720x720.png</image>
       <image>landscape-1280x768.png</image>
       <image>landscape-768x1280.png</image>
    </splashScreens>
    <icon>
       <image>icon_modplayer.png</image>
    </icon>
    <configuration name="Device-Debug">
       <platformArchitecture>armle-v7</platformArchitecture>
       <asset path="arm/o.le-v7-g/ModPlayer" entry="true" type="Qnx/Elf">ModPlayer</asset>
    </configuration>
    <configuration name="Device-Release">
       <entryPointType>Qnx/Cascades</entryPointType>
       <platformArchitecture>armle-v7</platformArchitecture>
       <asset path="arm/o.le-v7/ModPlayer.so" entry="true" type="Qnx/Elf">ModPlayer.so</asset>
    </configuration>

    <!--  Unique author ID assigned by signing authority. Required if using debug tokens. -->
    <!-- <authorId>ABC1234YjsnUk235h</authorId> -->
   
    <initialWindow>
        <autoOrients>true</autoOrients>
        <systemChrome>none</systemChrome>
        <transparent>false</transparent>
    </initialWindow>
    

    <asset path="assets">assets</asset>
    
    <asset path="translations" dest="qm">
        <include name="*.qm"/>
    </asset>
    <asset path="icon_modplayer.png">icon_modplayer.png</asset>
    <asset path="landscape-720x720.png">landscape-720x720.png</asset>
    <asset path="landscape-1280x768.png">landscape-1280x768.png</asset>
    <asset path="landscape-768x1280.png">landscape-768x1280.png</asset>
    
    <permission system="true">run_native</permission>
    <permission>access_internet</permission>
    <env var="LD_LIBRARY_PATH" value="app/native/lib:/usr/lib/qt4/lib"/>
    <env var="CASCADES_THEME" value="bright"/>
</qnx>
